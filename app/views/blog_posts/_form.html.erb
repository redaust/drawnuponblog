
<%= form_with model: @blog_post do |form| %>

<% if form.object.errors.any? %>
<div>
<% form.object.errors.full_messages.each do |message| %>
<div><%= message %> </div>
<% end %>
</div>
<% end %>

<div>
<%= form.label :title %>
<%= form.text_field :title %>
</div>

<div>
	<%= form.label :cover_image %>
	<% if blog_post.cover_image.present? %>
	<br/>
	<%= image_tag blog_post.cover_image, class: "border border-secondary-subtle rounded d-block", style: "max-width: 20%" if blog_post.cover_image.present? %>
	<br/>
	<%= link_to "Remove cover image", blog_post_cover_image_path(blog_post), data: { turbo_method: :delete, turbo_confirm: "Are you sure? Any other changes you have made will be lost." }  %>
	<br/>
	</div>
	<% end %>
	<%= form.file_field :cover_image %>
</div>

<div>
<%= form.label :content %>
<%= form.rich_text_area :content %>
</div>

<div>
<%= form.label :published_at %>
<%= form.datetime_select :published_at, include_blank: true %>
</div>
<%= form.button %>
<% end %>